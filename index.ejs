<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My to-do list</title>
    <style>
        :root {
            /* light mode */
            --bg-color: #f5f5f5;
            --text-color: #333;
            --card-bg: white;
            --border-color: #ddd;
            --shadow-color: rgba(0,0,0,0.1);
            --hover-shadow: rgba(0,0,0,0.15);
            --input-bg: white;
            --input-border: #ddd;
            --meta-text: #888;
            --description-text: #666;
        }

        [data-theme="dark"] {
            /* dark mode */
            --bg-color: #1a1a1a;
            --text-color: #e0e0e0;
            --card-bg: #2d2d2d;
            --border-color: #444;
            --shadow-color: rgba(0,0,0,0.3);
            --hover-shadow: rgba(0,0,0,0.5);
            --input-bg: #3d3d3d;
            --input-border: #555;
            --meta-text: #aaa;
            --description-text: #bbb;
        }

        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--border-color);
        }

        .welcome {
            color: var(--text-color);
            margin: 0;
        }

        .header-controls {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .theme-toggle {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            transition: all 0.3s ease;
        }

        .theme-toggle:hover {
            transform: scale(1.1);
            box-shadow: 0 2px 8px var(--shadow-color);
        }

        .view-toggle {
            display: flex;
            background: var(--card-bg);
            border-radius: 8px;
            padding: 5px;
            box-shadow: 0 2px 5px var(--shadow-color);
        }

        .view-btn {
            background: none;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 6px;
            font-size: 18px;
            transition: all 0.3s ease;
            color: var(--text-color);
        }

        .view-btn.active {
            background-color: #007bff;
            color: white;
        }

        .view-btn:hover:not(.active) {
            background-color: var(--input-bg);
        }

        .logout-btn {
            background-color: #dc3545;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #c82333;
        }

        .todo-form {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 10px var(--shadow-color);
            margin-bottom: 30px;
            transition: all 0.3s ease;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: var(--text-color);
            font-weight: bold;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--input-border);
            border-radius: 4px;
            box-sizing: border-box;
            background-color: var(--input-bg);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        input[type="text"]:focus,
        textarea:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0,123,255,0.3);
        }

        textarea {
            height: 80px;
            resize: vertical;
        }

        button:not(.view-btn):not(.theme-toggle) {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover:not(.view-btn):not(.theme-toggle) {
            background-color: #218838;
        }

        /* list view */
        .todo-list.list-view {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 10px var(--shadow-color);
            transition: all 0.3s ease;
        }

        .todo-item.list-view {
            padding: 15px;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
        }

        .todo-item.list-view:hover {
            box-shadow: 0 2px 8px var(--hover-shadow);
            transform: translateY(-1px);
        }

        .todo-item.list-view.completed {
            background-color: var(--input-bg);
            opacity: 0.8;
        }

        /* calendar view*/
        .todo-list.grid-view {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            background: transparent;
            padding: 0;
            box-shadow: none;
        }

        .todo-item.grid-view {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 10px var(--shadow-color);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 150px;
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
        }

        .todo-item.grid-view:hover {
            box-shadow: 0 4px 15px var(--hover-shadow);
            transform: translateY(-2px);
        }

        .todo-item.grid-view.completed {
            background-color: var(--input-bg);
            opacity: 0.8;
        }

        .todo-content.grid-view {
            flex-grow: 1;
            margin-bottom: 15px;
        }

        /* normal theme */
        .todo-title {
            font-weight: bold;
            margin-bottom: 5px;
            font-size: 16px;
            color: var(--text-color);
        }

        .todo-item.grid-view .todo-title {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .todo-description {
            color: var(--description-text);
            font-size: 14px;
            line-height: 1.4;
        }

        .todo-item.grid-view .todo-description {
            font-size: 14px;
            margin-bottom: 10px;
        }

        .todo-meta {
            font-size: 12px;
            color: var(--meta-text);
            margin-top: 8px;
        }

        .todo-item.grid-view .todo-meta {
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px solid var(--border-color);
        }

        .todo-actions {
            display: flex;
            gap: 8px;
        }

        .todo-item.grid-view .todo-actions {
            justify-content: center;
            margin-top: 10px;
        }

        .btn {
            padding: 6px 12px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 12px;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
        }

        .todo-item.grid-view .btn {
            padding: 8px 12px;
            font-size: 13px;
        }

        .btn-edit {
            background-color: #ffc107;
            color: black;
        }

        .btn-edit:hover {
            background-color: #e0a800;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .btn-toggle {
            background-color: #17a2b8;
            color: white;
        }

        .btn-toggle:hover {
            background-color: #138496;
        }

        .no-todos {
            text-align: center;
            color: var(--text-color);
            padding: 40px;
            background: var(--card-bg);
            border-radius: 8px;
            box-shadow: 0 2px 10px var(--shadow-color);
        }

        .status-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: bold;
            margin-left: 8px;
        }

        .status-completed {
            background-color: #28a745;
            color: white;
        }

        .status-pending {
            background-color: #ffc107;
            color: black;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="welcome">Welcome, <%= username %>!</h1>
        <div class="header-controls">
            <div class="view-toggle">
                <button class="view-btn active" data-view="list" title="List View">‚â°</button>
                <button class="view-btn" data-view="grid" title="Grid View">‚óº</button>
            </div>
            <button class="theme-toggle" id="themeToggle" title="Toggle Dark Mode">üåô</button>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <!-- Add new todo -->
    <div class="todo-form">
        <h3>Add New Task</h3>
        <form action="/todos" method="POST">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required placeholder="Enter task title">
            </div>
            
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" placeholder="Enter task description (optional)"></textarea>
            </div>
            
            <button type="submit">‚ûï Add Task</button>
        </form>
    </div>

    <!-- Todo List -->
    <h3>My To-do List</h3>
    <div class="todo-list list-view" id="todoList">
        <% if (typeof todos !== 'undefined' && todos.length > 0) { %>
            <% todos.forEach(function(todo) { %>
                <div class="todo-item list-view <%= todo.completed ? 'completed' : '' %>">
                    <div class="todo-content">
                        <div class="todo-title">
                            <%= todo.title %>
                            <span class="status-badge <%= todo.completed ? 'status-completed' : 'status-pending' %>">
                                <%= todo.completed ? '‚úì Done' : '‚è≥ Pending' %>
                            </span>
                        </div>
                        <% if (todo.description) { %>
                            <div class="todo-description"><%= todo.description %></div>
                        <% } %>
                        <div class="todo-meta">
                            <small>Created: <%= todo.createdAt.toLocaleString() %></small>
                        </div>
                    </div>
                    
                    <div class="todo-actions">
                        <form action="/todos/<%= todo._id %>/toggle" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-toggle">
                                <%= todo.completed ? '‚Ü∂ Undo' : '‚úì Done' %>
                            </button>
                        </form>
                        
                        <a href="/todos/<%= todo._id %>/edit" class="btn btn-edit">‚úèÔ∏è Edit</a>
                        
                        <form action="/todos/<%= todo._id %>/delete" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-delete" 
                                    onclick="return confirm('Are you sure you want to delete this task?')">
                                üóëÔ∏è Delete
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-todos">
                <p>üìù No tasks yet</p>
                <p>You can add your first to-do item using the form above!</p>
            </div>
        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const viewButtons = document.querySelectorAll('.view-btn');
            const todoList = document.getElementById('todoList');
            const todoItems = document.querySelectorAll('.todo-item');
            const themeToggle = document.getElementById('themeToggle');
            
            // load setting
            const savedView = localStorage.getItem('todoView') || 'list';
            setActiveView(savedView);

            const savedTheme = localStorage.getItem('theme') || 'light';
            setTheme(savedTheme);

            viewButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const viewType = this.getAttribute('data-view');
                    setActiveView(viewType);
                    localStorage.setItem('todoView', viewType);
                });
            });

            themeToggle.addEventListener('click', function() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                setTheme(newTheme);
                localStorage.setItem('theme', newTheme);
            });

            function setActiveView(viewType) {
                // update button
                viewButtons.forEach(btn => {
                    btn.classList.toggle('active', btn.getAttribute('data-view') === viewType);
                });

                // update list
                todoList.className = `todo-list ${viewType}-view`;
                
                // update
                todoItems.forEach(item => {
                    const originalClasses = Array.from(item.classList).filter(cls => 
                        !cls.includes('list-view') && !cls.includes('grid-view')
                    ).join(' ');
                    item.className = `${originalClasses} ${viewType}-view`;
                });
            }

            function setTheme(theme) {
                document.documentElement.setAttribute('data-theme', theme);
                themeToggle.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
                themeToggle.title = theme === 'dark' ? 'Toggle Light Mode' : 'Toggle Dark Mode';
            }
        });
    </script>
</body>
</html>